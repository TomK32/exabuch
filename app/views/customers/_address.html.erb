<tr class="<%= cycle 'odd', 'even' %>">
  <td><%= link_to h(address.company), customer_address_path(@customer, address) %></td>
  <td><%= h address.name %></td>
  <td><%= h address.street %> <%= h address.postcode %> <%= h address.city %> <%= h address.country %></td>
  <td><%= h address.tax_number %></td>
  <td><%= link_to 'zeigen', customer_address_path(@customer, address) %>
    <%= link_to 'bearbeiten', edit_customer_address_path(@customer, address) %>
    <%= link_to_destroy 'löschen', 'Wollen Sie die Adresse wirklich löschen?', customer_address_path(@customer, address), confirm_destroy_customer_address_path(@customer, address)} %></td>
</tr>
