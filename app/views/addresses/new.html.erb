<% @page_title = 'Neue Adresse anlegen' %>

<%= error_messages_for :address %>
<% form_for :address, @address, :url => addresses_url, :html => {:method => :post} do |f| %>
<%= hidden_field_tag(:customer_id, params[:customer_id]) unless params[:customer_id].nil? %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <%= submit_tag 'Speichern' %>
<% end %>