<tr id="invoice-<%= invoice.id %>" class="<%= cycle 'odd', 'even' %>">
  <td><%= invoice.number %></td>
  <td><%= invoice.billing_date %></td>
  <td><%= invoice.payed ? invoice.payment_date : 'offen' %></td>
  <td><%= invoice.title %></td>
  <td><%= number_to_euro(invoice.gross_amount) %></td>
  <td><%= number_to_euro(invoice.tax_amount) %></td>
  <td><%= link_to "ändern", edit_invoice_path(invoice) %>
    <%= link_to "zeigen", customer_invoice_path(@customer, invoice) %> <%= link_to "PDF", formatted_customer_invoice_path(@customer, invoice, :pdf) %>
    <%= link_to_destroy "löschen", {:id => invoice.id}, {:href => confirm_destroy_customer_invoice_path(@customer, invoice)} %> </td>
    
</tr>